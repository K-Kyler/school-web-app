extends ../layouts/dashboardLayout

block dashboardFunctions
    a(class="mb-2 px-3 py-2 dashboard__sideMenuFunction dashboard__sideMenuFunction--active", href="/dashboard") Dashboard 

    if user.type === "Admin"
        a(class="mb-2 px-3 py-2 dashboard__sideMenuFunction", href="/dashboard/users") Create staff
        a(class="mb-2 px-3 py-2 dashboard__sideMenuFunction", href="/dashboard/statistic") Statistic

    a(class="mb-2 px-3 py-2 dashboard__sideMenuFunction", href="/dashboard/communication") Communication 
    a(class="mb-2 px-3 py-2 dashboard__sideMenuFunction", href="/dashboard/notification") Notification 
    a(class="px-3 py-2 dashboard__sideMenuFunction", href="javascript:void", id="logoutButton") Sign out

block dashboardContent
    if user.type === "Student"
        div(class="dashboard__contentInfo container bg-white d-flex flex-column align-items-center")
    
            if user.avatar === ""
                img(class="mb-4 mt-4", src="/images/default_avatar.svg", alt="user avatar", width="100", height="100")
            else 
                img(class="mb-4 mt-4", src=user.avatar, alt="user avatar", width="100", height="100")

            div(class="container-fluid")
                div(class="row mb-3")
                    div(class="col-md-2 align-self-center") Name 
                    div(class="col-md-10")
                        input(type="text", required, disabled, value=user.name, class="form-control")
                div(class="row mb-3")
                    div(class="col-md-2 align-self-center") Class 
                    div(class="col-md-10")
                        input(type="text", required, disabled, value=user.class, class="form-control")
                div(class="row mb-3")
                    div(class="col-md-2 align-self-center") Faculty
                    div(class="col-md-10")
                        input(type="text", required, disabled, value=user.faculty, class="form-control")
