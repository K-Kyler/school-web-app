//- Edit post modal
#editPostModal.modal.fade(role='dialog')
    .modal-dialog.modal-lg(role='content')
        .modal-content
            .modal-header
                h4.modal-title Edit post
                button.close(type='close', data-dismiss='modal') &times;
            .modal-body
                form 
                    if user 
                        .form-group.row.d-flex.align-items-center
                            .col-md-1
                                if user.avatar === ""
                                    img(id="profileAvatar", width="40", height="40", src="/images/default_avatar.svg", alt="user avatar")
                                else
                                    img(id="profileAvatar", width="40", height="40", src=user.avatar, alt="user avatar")

                            .col-md-11.pl-0
                                span(id="owner") #{user.name}

                        .form-group.row 
                            .col-md-12 
                                textarea(placeholder='What are you thinking?', class="form-control", required, id="editPostContent", rows="5")
                        .form-group.row 
                            .col-md-12
                                div(class="addToPost d-flex justify-content-between align-items-center px-3 py-2")
                                    div(class="d-flex align-items-center")
                                        img(id="editPostImageReview")
                                        span(class="text-secondary", id="editPostImageName") Add to post

                                    div(class="addToPost__container")
                                        label(for="editPostImage" class="mb-0")
                                            i(class="fas fa-images text-success")
                                        input(onchange="editPostImageReviewHandler(this)", type="file", accept="image/*", name="editPostImage", id="editPostImage", class="d-none form-control")

                                        i(class="ml-4 mr-2 fab fa-youtube text-danger", id="editYoutubeURLInputButton")

                        .form-group.row#editYoutubeURLInput
                            .col-md-12
                                input(autocomplete="off", class="form-control", type="text", id="editPostVideo", placeholder="Put your Youtube URL here")
                        .form-group.row
                            .col-md-12
                                div(id="editUploadPost")
                                p(id="errorEditPost" class="mt-3 text-center text-danger")
                        .form-group.row
                            .col-md-12.justify-content-end.d-flex
                                button(class="btn btn-primary", id="editPostButton") Update
                                button(class="btn btn-default ml-3", data-dismiss="modal") Close